<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_boder_menu"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvChooseNetwork"
            android:padding="@dimen/padding_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/padding_large_x1"
            android:background="@color/colorWhite"
            android:layout_margin="2dp"
            android:drawableLeft="@drawable/ic_choose_network"
            android:text="@string/txt_select_network"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/colorGray">

        </View>

        <TextView
            android:id="@+id/tvChooseNumber"
            android:padding="@dimen/padding_large"
            android:layout_width="wrap_content"
            android:background="@color/colorWhite"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawablePadding="@dimen/padding_large_x1"
            android:drawableLeft="@drawable/ic_choose_number"
            android:text="@string/txt_select_network"/>
    </LinearLayout>
</layout>
