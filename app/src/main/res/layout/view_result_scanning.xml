<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/actionChangeIsdn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="#3098e5"
            android:gravity="center"
            android:padding="@dimen/padding_large"
            android:text="Chuyển Đổi"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/actionChangeIsdn"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/layout_change_isdn_toolbar" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/colorGray" />



            <LinearLayout
                android:layout_below="@+id/toolbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_normal"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingTop="@dimen/padding_normal"
                android:paddingBottom="@dimen/padding_normal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/txt_select_all_sub"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:textSize="@dimen/text_large" />

                <FrameLayout
                    android:layout_width="55dp"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkboxAllF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:button="@drawable/toggle"
                        android:gravity="center"
                        android:visibility="visible" />
                </FrameLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/colorGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvNetwork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_small"
                    android:layout_weight=".5"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding_normal"
                    android:paddingBottom="@dimen/padding_normal"
                    android:text="@string/txt_select_network"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_small"
                    android:layout_weight=".5"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding_normal"
                    android:paddingBottom="@dimen/padding_normal"
                    android:text="@string/txt_select_number"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/toolbar"
                android:id="@+id/recyclerView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <LinearLayout
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/toolbar"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_marginLeft="@dimen/padding_normal"
                android:background="@drawable/bg_boder_menu"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvChooseNetwork"
                    android:padding="@dimen/padding_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/padding_large_x1"
                    android:background="@color/colorWhite"
                    android:layout_margin="2dp"
                    android:drawableLeft="@drawable/ic_choose_network"
                    android:text="@string/txt_select_network"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="@color/colorGray">

                </View>

                <TextView
                    android:id="@+id/tvChooseNumber"
                    android:padding="@dimen/padding_large"
                    android:layout_width="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawablePadding="@dimen/padding_large_x1"
                    android:drawableLeft="@drawable/ic_choose_number"
                    android:text="@string/txt_select_number"/>
            </LinearLayout>
            <!--<include-->
                <!--android:id="@+id/menu"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/padding_normal"-->
                <!--android:layout_below="@+id/toolbar"-->
                <!--layout="@layout/item_menu_choose_network"/>-->
        </RelativeLayout>


    </RelativeLayout>
</layout>
