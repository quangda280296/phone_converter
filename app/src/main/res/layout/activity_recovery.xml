<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/match_wrap"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/title_history_recovery"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/back"
                android:layout_width="?android:attr/actionBarSize"
                android:layout_height="?android:attr/actionBarSize"
                android:padding="@dimen/padding_large"
                app:srcCompat="@drawable/ic_arrow_back_white_24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/adsBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical" />

        <LinearLayout
            style="@style/match_match"
            android:layout_above="@+id/adsBanner"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">

            <FrameLayout style="@style/match_match">

                <ViewAnimator
                    android:id="@+id/viewAnimator"
                    style="@style/match_match"
                    android:layout_gravity="center"
                    android:inAnimation="@anim/fade_in"
                    android:outAnimation="@anim/fade_out">

                    <include
                        android:id="@+id/viewScanPhone"
                        layout="@layout/view_scan_recovery" />

                    <include
                        android:id="@+id/viewScanning"
                        layout="@layout/view_scanning" />

                    <include
                        android:id="@+id/viewDoneRecovery"
                        layout="@layout/view_done_recovery" />
                </ViewAnimator>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>